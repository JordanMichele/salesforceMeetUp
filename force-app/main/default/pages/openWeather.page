<apex:page standardController="Account" extensions="openWeather" showHeader="false">
    <apex:pageBlock title="{!city} Weather">
    	<apex:pageBlockSection >
            <apex:pageMessages ></apex:pageMessages>
            <apex:outputText label="Temperature" value="{!temp}"/>
            <apex:outputText label="Pressure" value="{!pressure}"/>
            <apex:outputText label="Humidity" value="{!humidity}"/>
            <apex:outputText label="Min Temperature" value="{!temp_min}"/>
            <apex:outputText label="Max Temperature" value="{!temp_max}"/>
        </apex:pageBlockSection>
    </apex:pageBlock>	
</apex:page>